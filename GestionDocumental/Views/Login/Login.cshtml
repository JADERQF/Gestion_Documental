@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        span {
            display: inline-block;
            width: 70px;
            height: 70px;
            margin: 6px;
            background-color: #555;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="border border-2  rounded-pill">
            <h2 class="col-auto text-center">Empresa XYZ</h2>
        </div>
        <hr />
        <div class="col-sm-4 col-sm-offset-4 border border-2  rounded">

            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="usuario">Usuario</label>
                    <input type="text" placeholder="Digite usuario" id="usuario" name="usuario" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="clave">Contraseña</label>
                    <input type="password" placeholder="Digite clave" id="clave" name="clave" class="form-control" />
                </div>

                <button class="btn btn-lg btn-primary">Iniciar sesión</button>
            }
            @{
                if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div>@ViewBag.Message</div><!--style=" background-color:#776b65db; padding:15px; border-color:black; margin-bottom:1.5em; color:white;  border-radius:10px;  border:10px;"-->
                }
            }
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>