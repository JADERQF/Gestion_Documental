@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
          crossorigin="anonymous" />
    <title>Gestion documental</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        span {
            display: inline-block;
            width: 70px;
            height: 70px;
            margin: 6px;
            background-color: #555;
        }
    </style>
</head>
<body class="bg-secondary d-flex justify-content-center align-items-center vh-100">
    <div class="bg-white p-5 rounded-5 text-secondary shadow" style="width: 40rem">
        <div class="p-3">
            <div class="text-center fs-1 fw-bold">Empresa XYZ</div>
            <div class="border-bottom text-center" style="height: 0.9rem">
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <img src="~/Content/login-icon.svg" alt="login-icon" style="height: 7rem" />
        </div>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div class="input-group mt-3 d-flex justify-content-center align-items-center">
                <label for="usuario" class="mt-4">Nombre de usuario </label>
                <input class="form-control bg-light" name="usuario" id="usuario" type="text" placeholder="Nombre Usuario" />
            </div>
            <div class="input-group mt-3 d-flex justify-content-center align-items-center">
                <label for="clave" class="mt-4">Contraseña</label>
                <input class="form-control bg-light" name="clave" id="clave" type="password" placeholder="Contraseña" />
            </div>
            <div class="d-flex justify-content-around mt-1">
                <div class="pt-1">
                    <a href="#"
                       class="text-decoration-none text-info fw-semibold"
                       style="font-size: 0.9rem"> </a>
                </div>
            </div>
            <button class="btn btn-info text-white w-100 mt-4 fw-semibold shadow-sm">
                Iniciar Sesión
            </button>
        }
        
        <div class="p-3">
            <div class="border-bottom text-center" style="height: 0.9rem">
                @{
                    if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        
                        <div>@ViewBag.Message</div>
                        
                    }
                }
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>