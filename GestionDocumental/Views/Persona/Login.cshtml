@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h2>Empresa XYZ</h2>
    <form method="post" action="/Persona/prb" class="border border-info">
        <div class="form-group">
            <label for="usuario">Usuario</label>
            <input type="text" placeholder="Digite usuario" id="usuario" name="usuario" class="form-control"/>
        </div>
        <div class="form-group">
            <label for="pass">Contraseña</label>
            <input type="password" placeholder="Digite clave" id="pass" name="pass" class="form-control"/>
        </div>
        
        <button>Iniciar sesión</button>
    </form>
</body>
</html>


