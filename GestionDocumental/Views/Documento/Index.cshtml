@model List<GestionDocumental.Models.ListViewDocumento>
<h2 class="text-center" style="color:black"> <strong>Documento</strong></h2>
<p>
    @Html.ActionLink(".", "Create",null, new { @class = "btn btn-primary  glyphicon glyphicon-plus" }) <!---->
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            Id Documento
        </th>
        <th>
            Fecha Radicado
        </th>
        <th>
            Fecha Documento
        </th>
        <th>
            Fecha Vence
        </th>
        <th>
            Persona
        </th>
        <th>
            Tipo Documento
        </th>
        <th>
            Estado
        </th>
        <th>
            Funciones
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaRadicado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaVence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Persona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_TipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Estado)
            </td>
            <td>
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Open modal for</button>
                @Html.ActionLink(".", "Edit", new { id = item.IdDocumento }, new { @class = "btn btn-warning glyphicon glyphicon-edit" })
                @Html.ActionLink(".", "", "", new { @class = "btn btn-info glyphicon glyphicon-eye-open", data_toggle = "modal", data_target = "#Details" })
                @Html.ActionLink(".", "Delete", new { id = item.IdDocumento }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Recipient:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="Details" tabindex="-1" role="dialog" aria-labelledby="DetailsLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Recipient:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>
