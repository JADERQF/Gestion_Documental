@model List<GestionDocumental.Models.ListViewDocumento>

<p>
    @Html.ActionLink("Crear Documento", "Create") <!---->
</p>
<table class="table">
    <tr>
        <th>
            Id Documento
        </th>
        <th>
            Fecha Radicado
        </th>
        <th>
            Fecha Documento
        </th>
        <th>
            Fecha Vence
        </th>
        <th>
            Persona
        </th>
        <th>
            Tipo Documento
        </th>
        <th>
            Estado
        </th>
        <th>
            Funciones
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaRadicado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaVence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Persona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_TipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Estado)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdDocumento }) |
                @Html.ActionLink("Details", "Details", new { id=item.IdDocumento }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IdDocumento })
            </td>
        </tr>
    }

</table>
