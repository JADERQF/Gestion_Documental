@model GestionDocumental.Models.ListViewDocumento

@{ 
    IEnumerable<SelectListItem> itemsPersona = (IEnumerable<SelectListItem>)ViewBag.itemsPersona;
    IEnumerable<SelectListItem> itemsTipo = (IEnumerable<SelectListItem>)ViewBag.itemsTipo;
    IEnumerable<SelectListItem> itemsEstado = (IEnumerable<SelectListItem>)ViewBag.itemsEstado;
}

@using (Html.BeginForm("Create", "Documento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Formulario de radicación</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.fechaDocumento, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.fechaDocumento, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.fechaDocumento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.archivo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.archivo, new { @class = "form-control", type = "file", accept = ".pdf" })
            @Html.ValidationMessageFor(model => model.archivo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Id_Persona, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Id_Persona", itemsPersona, "Seleccione...", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id_Persona, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Id_TipoDocumento, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Id_TipoDocumento", itemsTipo, "Seleccione...", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id_TipoDocumento, "", new { @class = "text-danger" })
        </div>
    </div>

    <!--<div class="form-group">
        @Html.LabelFor(model => model.Id_Estado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Id_Estado", itemsEstado, "Seleccione...", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id_Estado, "", new { @class = "text-danger" })
        </div>
    </div>-->

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
